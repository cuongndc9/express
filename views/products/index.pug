extends ../layout/common
block content
	.row
		each product in products
			.col-lg-4.col-md-6.mb-4
				.card(style='width: 18rem;')
					img.card-img-top(src=product.image, alt=product.name)
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						a.btn.btn-primary(href='/cart/add/' + product.id) Add To Cart
	if 	pages.length > 0
		nav(aria-label='Page navigation for products')
			ul.pagination
				// previous page
				if disabledPage == -1
					li.page-item.disabled
						a.page-link(href='/products?page=' + (activePage - 1), aria-label='Previous')
							span(aria-hidden='true') «
							span.sr-only Previous
				else
					li.page-item
						a.page-link(href='/products?page=' + (activePage - 1), aria-label='Previous')
							span(aria-hidden='true') «
							span.sr-only Previous
				each page in pages
					if page == activePage
						li.page-item.active
							a.page-link(href='/products?page=' + page)= page
					else
						li.page-item
							a.page-link(href='/products?page=' + page)= page
				// next page
				if disabledPage == 1
					li.page-item.disabled
						a.page-link(href='/products?page=' + (activePage + 1), aria-label='Next')
							span(aria-hidden='true') »
							span.sr-only Next
				else
					li.page-item
						a.page-link(href='/products?page=' + (activePage + 1), aria-label='Next')
							span(aria-hidden='true') »
							span.sr-only Next
	else
		.alert.alert-danger No products to display.
